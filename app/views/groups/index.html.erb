<div class="jumbotron jumbotron-fluid bg-info text-light">
  <div class="container">
    <h1 class="display-4">Groups</h1>
    <p class="lead"></p>
  </div>
</div>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Groups</li>
  </ol>
</nav>

<div class="btn-group" role="group" aria-label="">
  <button type="button" class="btn btn-light"><%= link_to far_icon('plus-square', text: "New Group"), new_group_path %></button>
  <button type="button" class="btn btn-light"><%= link_to fas_icon('user-friends', text: "Leave Groups"), groups_path %></button>
</div>
<br />
<% if @groups.count == 0 %>
  There are no groups to join.
<% else %>
  <% @groups.unique.each do |group| %>
    <div class="row">
      <div class="col">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to group.groupname, group_path(group) %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>