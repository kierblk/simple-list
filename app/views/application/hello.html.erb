<div class="jumbotron jumbotron-fluid bg-info text-light">
  <div class="container">
    <h1 class="display-4">Welcome back, <%= current_user.name %>!</h1>
    <p class="lead">Which board would you like to look at today?</p>
  </div>
</div>

<div class="btn-group" role="group" aria-label="">
  <button type="button" class="btn btn-light"><%= link_to far_icon('edit', text: "Edit Account") %></button>
  <button type="button" class="btn btn-light"><%= link_to far_icon('trash-alt', text: "Delete Account") %></button>
  <button type="button" class="btn btn-light"><%= link_to far_icon('plus-square', text: "Create Board"), new_user_ideaboard_path(current_user) %></button>
</div>
<hr />

<% if current_user.ideaboards.count == 0 %>
  You have no ideaboards.
<% else %>
  <% current_user.ideaboards.each do |ideaboard| %>
    <div class="row">
      <div class="col-sm-4">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to ideaboard.ideaboard_name, user_ideaboard_path(current_user,ideaboard) %>
          <span class="badge badge-primary badge-pill"><%= ideaboard.lists.count %></span>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>