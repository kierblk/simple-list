<div class="jumbotron jumbotron-fluid bg-info text-light">
  <div class="container">
    <h1 class="display-4"><%= current_user.name %></h1>
    <p class="lead">Edit User Account</p>
  </div>
</div>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "User Account", user_path(current_user) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Account</li>
  </ol>
</nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :username, "Username: " %>
    <%= f.text_field :username %>
  </div>
  <br />
  <div class="field">
    <%= f.label :email, "Email: "%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <br />
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "New Password: " %>
    <%= f.password_field :password, autocomplete: "new-password" %><br />
    <i>(leave blank if you don't want to change it)</i>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <br />
  <div class="field">
    <%= f.label :password_confirmation, "Confirm New Password: " %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br /><br />
  <div class="field">
    <%= f.label :current_password, "Current Password: " %>
    <%= f.password_field :current_password, autocomplete: "current-password" %><br />
    <i>(we need your current password to confirm your changes)</i><br />
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br /><br />
<fieldset class="bg-light">
<h3>Danger Zone</h3>
<br />
<%= link_to far_icon('trash-alt', text: "Delete Account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
<br /><br />
<p>I changed my mind!!</p>
<%= link_to "Go Back", :back %>
</fieldset>